[user]
	email = nhibberd@gmail.com
	name = Nick Hibberd
[core]
	editor = Emacs -nw
	excludesfile = ~/.gitignore
[push]
	default = simple
[alias]
	ignore = update-index --assume-unchanged
	showignored = ! git ls-files -v | grep ^h | awk '{print $2}'
	unignore = update-index --no-assume-unchanged
[merge]
	tool = diff
[color "status"]
       added = blue
       changed = red
       untracked = yellow
